{
    "version": 2,
    "builds": [
        {
            "src": "server/dist/**/*.js",    
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",   
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",          
            "dest": "/server/dist/api/$1"        
        },
        {
            "src": "/(.*)",                 
            "dest": "/client/dist/$1"            
        }
    ]
}

