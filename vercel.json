{
  "version": 2,
  "builds": [
    {
      "src": "server/dist/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/dist/server.js"
    },
    {
      "source": "/(.*)\\.(js|css)",
      "destination": "/client/dist/$1.$2"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/client/dist/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/client/dist/index.html"
    }
  ]
}
