{
  "version": 2,
  "builds": [
    {
      "src": "server/dist/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"  
    },
    {
      "source": "/(.*)",
      "destination": "/index.html" 
    }
  ]
}


